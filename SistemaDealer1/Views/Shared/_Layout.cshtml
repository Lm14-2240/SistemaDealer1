</head>
<body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand">Navbar</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        @Html.ActionLink("Combustibles", "Index", "Combustibles", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Vehículo
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @Html.ActionLink("Combustibles", "Index", "Combustibles", null, new { @class = "nav-link" })
                            @Html.ActionLink("Marcas", "Index", "Marcas", null, new { @class = "nav-link" })
                            @Html.ActionLink("Modelos", "Index", "Modeloes", null, new { @class = "nav-link" })
                            @Html.ActionLink("Transmisiones", "Index", "Transmisions", null, new { @class = "nav-link" })
                            <a class="dropdown-item" href="#">Another action</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </li>
                    
                    <li class="nav-item">
                        <a href="~/Clientes" class="nav-link"> <i class="fas fa-users"></i></a>
                    <li class="nav-item">@Html.ActionLink("Empleados", "Index", "Empleadoes", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Facturas", "Index", "Facturas", null, new { @class = "nav-link" })</li>

                    <li class="nav-item">@Html.ActionLink("Reservas", "Index", "Reservas", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Roles", "Index", "Rols", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Sucursales", "Index", "Sucursals", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Proveedores", "Index", "Proveedores", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Vehiculos", "Index", "Vehiculoes", null, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </nav>
   
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
