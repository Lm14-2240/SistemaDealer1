@model IEnumerable<SistemaDealer1.Models.Empleado>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    <a href="/Empleadoes/Create">
        <i class="fas fa-user-tie" style="font-size:30px;margin-top:10px;"> Nuevo Empleado</i>
    </a>
</p>
<table class="table"  style="color:blue;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rol.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contraseña)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rol.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contraseña)
        </td>
        <td>
            <a><i class="far fa-edit"></i></a>
            @Html.ActionLink("Edit", "Edit", new { id = item.EmpleadoId }) |
            <a><i class="fas fa-list"></i></a>
            @Html.ActionLink("Details", "Details", new { id = item.EmpleadoId }) |
            <a><i class="fas fa-trash"></i></a>
            @Html.ActionLink("Delete", "Delete", new { id = item.EmpleadoId })
        </td>
    </tr>
}

</table>
