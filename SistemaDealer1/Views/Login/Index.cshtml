@using Remotion.Linq.Clauses
@model SistemaDealer1.Models.Empleado

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dealer2.0</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        body {
            /*background-image: url("../../sources/Background - Lincoln and Explorer.png");*/
            background-image: url("../../sources/Background - Jeep Wrangler.jpg");
            background-size: cover;
        }
    </style>
</head>
<body>
    <div class="container mt-5 w-50 pt-5 mr-5">
        <form method="post">
            <div class="form-group row">
                <label class="badge" for="username" style="font-size: large">Usuario</label>
                <input class="form-control shadow-lg p-3 bg-white rounded" id="username" type="text" name="username" />
            </div>
            <div class="form-group row">
                <label class="badge" for="password" style="font-size: large">Contrase&ntilde;a</label>
                <input class="form-control shadow-lg p-3 bg-white rounded" id="password" name="password" type="password" />
            </div>
            <div class="alert-danger mb-3 rounded" style="text-align: center">
                <span >@Html.ValidationMessageFor(m => m.Usuario)</span>
                <span>@Html.ValidationMessageFor(m => m.Contraseña)</span>
            </div>

            <button class="btn btn-primary float-right shadow-lg p-3 rounded" type="submit">Acceder</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
