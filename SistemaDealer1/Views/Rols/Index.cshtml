@model IEnumerable<SistemaDealer1.Models.Rol>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    <a href="/Rols/Create">
        <i class="fas fa-user-tag" style="font-size:50px;margin-top:10px;"></i>
    </a>
</p>
<table class="table"  style="color:white;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RolId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RolId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RolId })
        </td>
    </tr>
}

</table>
